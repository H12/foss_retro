<!DOCTYPE html>

<!--
  <section class="relative h-min px-6 pt-10 pb-8 bg-white shadow-xl ring-1
  ring-gray-900/5 sm:max-w-lg sm:mx-auto sm:rounded-lg sm:px-10">
  </section>
-->

<html lang="en" class="h-full">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%= csrf_meta_tag() %>
    <%= live_title_tag(assigns[:page_title] || "FossRetro", suffix: " Â· Phoenix Framework") %>
    <link phx-track-static rel="stylesheet" href={Routes.static_path(@conn, "/assets/app.css")} />
    <link rel="stylesheet" href="https://cdn.lineicons.com/2.0/LineIcons.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Quicksand" />
    <script
      defer
      phx-track-static
      type="text/javascript"
      src={Routes.static_path(@conn, "/assets/app.js")}
    >
    </script>
  </head>
  <body class="phx-body flex flex-col h-screen">
    <header class="h-min">
      <section class="flex items-center">
        <a href="/" class="basis-1/6">
          <img
            class="h-24"
            src={FossRetroWeb.Endpoint.static_path("/images/logo.svg")}
            alt="logo"
          />
        </a>
        <%= if assigns[:board] do %>
          <div class="text-xl basis-2/3 text-center"><%= @board.title %></div>
        <% end %>
        <div class="basis=1/4"></div>
      </section>
    </header>
    <%= @inner_content %>
  </body>
</html>
